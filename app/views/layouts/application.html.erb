<!DOCTYPE html>
<html>
  <head>
    <title>TestProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag   'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if !current_user %>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <a class="nav-link" href="/users/sign_in">Sign In <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users/sign_up">Sign up</a>
              </li>
            </ul>
          </div>
        </nav>

      <% end %>
      <% if user_signed_in? && current_user.type == 'Admin'  %>
        <%= render  "devise/shared/admin" %>
      <% end %>

      <% if user_signed_in? && current_user.type == 'Buyer'  %>
        <%= render  "devise/shared/buyer" %>
      <% end %>

      <%= yield %>

    </div>
  </body>
</html>
