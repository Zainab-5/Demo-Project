<div class="row">
  <div class = "col-sm-3 display-box">
    <h2  class="text-center heading" >Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div>
        <%= f.text_field :name, autofocus: true, class: "form-control form-input", placeholder: 'Name'%>
      </div>

      <div class=”field”>
        Upload Profile Picture
        <%= f.file_field :image, class: "form-control form-input", placeholder: 'Image'%>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-input", placeholder: 'Email' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-input", placeholder: "Password ( #{@minimum_password_length} characters minimum)" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-input", placeholder: 'Password Confirnation' %>
      </div>

      <div class="field">
        <%= f.hidden_field :type, value: "Buyer" %>
      </div>

      <div class="actions">
        <br>
        <%= f.submit "Sign up", class: 'btn btn-dark full-width' %>
      </div>
    <% end %>

    <div style="margin: 10px;">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
