<div class="row">
  <div class = "col-sm-3 display-box">

    <h2 class='heading text-center'>Update <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div>
        <%= f.text_field :name, autofocus: true, class: "form-control form-input" %>
      </div>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class=”field”>
        <p> Change Profile Picture </p>
        <%= f.file_field :image, class: "form-control form-input" %>
      </div>

      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-input", placeholder: "Password ( #{@minimum_password_length} characters minimum)" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-input" %>
      </div>

      <div class="field">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-input" %>
      </div>

      <div class="field">
        <%= f.hidden_field :type,  value: "Buyer" %>
        <% if current_user.type == 'Admin'  %>
          <%= f.hidden_field :type,  value: "Admin" %>
        <% end %>

      </div>

      <div class="actions">
        <%= f.submit "Update", class: 'btn btn-dark button full-width'%>
      </div>
    <% end %>

    <div class="text-center">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger button' %>
    </div>
  </div>
</div>
