
<%= form_with model: @feature, local: true do |form| %>
  <% if @feature.errors.any?  %>
    <%= render 'error', obj: @feature.errors %>
 <% end %>
<div class="container" style="width: 200px">
  <%= form_with model: @feature do |form| %>
    <div class="form-group">
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </div>

    <div class="form-group">
      <%= form.label :code %><br>
      <%= form.text_field :code %>
    </div>

    <div  class="form-group">
      <%= form.label :unit_price %><br>
      <%= form.number_field :unit_price %>
    </div>

    <div  class="form-group">
      <%= form.label :max_limit %><br>
      <%= form.number_field :max_limit %>
    </div>

    <div class="action">
      <%= form.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
<% end %>
