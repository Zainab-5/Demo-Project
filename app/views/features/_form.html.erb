
<%= form_with model: @feature, local: true do |form| %>
  <% if @feature.errors.any?  %>
    <%= render 'shared/error', obj: @feature.errors %>
  <% end %>
  <div class="container" style="width: 200px">
    <%= form_with model: @feature do |form| %>
      <div class="form-group">
        <%= form.label :name %><br>
        <%= form.text_field :name, required: true %>
      </div>

      <div class="form-group">
        <%= form.label :code %><br>
        <%= form.text_field :code, required: true %>
      </div>

      <div  class="form-group">
        <%= form.label :unit_price %><br>
        <%= form.number_field :unit_price, required: true %>
      </div>

      <div  class="form-group">
        <%= form.label :max_limit %><br>
        <%= form.number_field :max_limit, required: true %>
      </div>

      <div class="action">
        <%= form.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
<% end %>
