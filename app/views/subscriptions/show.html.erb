<div class="row">
  <div class="col-md-6 mx-auto text-center">
    <h2 class="p">  <%= @subscription.plan.name %> Usage</h2>
    <table class="table table-dark">
      <thead>
        <tr>
          <th>Feature</th>
          <th>Units Used</th>
        </tr>
      </thead>
      <tbody>
        <% @usages.each do |usage| %>
            <tr>

              <td>
                <%= usage.feature.name %>
              </td>
              <td>
                <%= usage.units_used %>
              </td>
              </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
