<%= form_with model: @subscription, local: true do |form| %>
  <% if @subscription.errors.any?  %>
    <%= render 'error', obj: @subscription.errors %>
  <% end %>
<% end %>

<div class="container", style= "width: 300px;" >
  <%= form_with(model: @subscription, local: true) do |form| %>
    <div class= "form-group">
      <%= form.label :billing_date %><br>
      <%= form.text_field :billing_date %>
    </div>

    <div class= "form-group">
      <%= form.label :plan_id, "Plan" %><br />
      <%= select_tag :plan_id, options_for_select(@plans.collect{ |u| [u.name, u.id] }) %>
    </div>
    <div >
      <%= form.submit  "Create Subscription",  class: "btn btn-success" %>
    </div>
  <% end %>
</div>
