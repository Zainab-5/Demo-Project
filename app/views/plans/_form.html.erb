
<%= form_with model: @plan, local: true do |form| %>
  <% if @plan.errors.any?  %>
    <%= render 'shared/error', obj: @plan.errors %>
  <% end %>
<% end %>

<div class="container", style= "width: 300px;" >
  <%= form_with model: @plan, local: true do |form| %>
    <div class= "form-group">
      <%= form.label :name %><br>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>
    <div class= "form-group">
      <%= form.label :fee %><br>
      <%= form.number_field :fee, class: "form-control", required: true %>
    </div>
    <div class= "form-group">
      <%= form.collection_check_boxes :feature_ids, Feature.all, :id, :name, {}, {multiple: true} do |b| %>
        <div>
          <%= b.label(class: "form-check-label") %>
          <%= b.check_box(class: "form-input") %>
        </div>
      <% end %>
    </div>
    <div class="text-center">
      <%= form.submit "Save", class: "btn btn-success" %>
    </div>
  <% end %>
</div>


